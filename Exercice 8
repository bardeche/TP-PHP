<?php
             
             for ($p=1; $p<=20; $p++) { 
        $x= intval(readline ("Entrez le nombre numero $p  :\n" ) );
        
         if ($p==1){
            $max=$x;
            $post=$p;
           }
           else
           if ($max<$x)
           {
            $max=$x;
            $post=$p;
           }
          

              }
              echo ("le plus grand des nombres est : $max \n");
              echo ("sa position est : $post");
      

   
?>
